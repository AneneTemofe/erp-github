                                        <select asp-for="ContractTypeId" class="form-control" asp-items="ViewBag.ContractTypeId"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Organisation*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input asp-for="OrganisationId" class="form-control" />
                                        <span asp-validation-for="OrganisationId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Job Description*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <textarea asp-for="JobDescription" class="form-control" cols="3"></textarea>
                                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            @*<div class="form-group">
                                    <label asp-for="DateCreated" class="control-label"></label>
                                    <input asp-for="DateCreated" class="form-control" />
                                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DateUpdated" class="control-label"></label>
                                    <input asp-for="DateUpdated" class="form-control" />
                                    <span asp-validation-for="DateUpdated" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DateModified" class="control-label"></label>
                                    <input asp-for="DateModified" class="form-control" />
                                    <span asp-validation-for="DateModified" class="text-danger"></span>
                                </div>*@

                            <hr />
                            <div class="form-group row m-b-0">
                                <div class="offset-sm-3 col-sm-9">
                                    <button type="submit" class="btn btn-success waves-effect waves-light">Edit Job</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Page wrapper  -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- footer -->
