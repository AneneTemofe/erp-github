@model HRM.ERP.Models.ACC.ProductService
@{
  ViewData["Title"] = "Create";
  Layout = "_LayoutAdmin";
  // Layout = null;
}

<!-- Preloader - style you can find in spinners.css -->
<!-- ============================================================== -->
<div class="preloader">
  <div class="loader">
    <div class="loader__figure"></div>
    <p class="loader__label">Elite admin</p>
  </div>
</div>
<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">
  <!-- ============================================================== -->
  <!-- Topbar header - style you can find in pages.scss -->
  <!-- ============================================================== -->
  @await Html.PartialAsync("_LayoutAdminHeader")
  <!-- ============================================================== -->
  <!-- End Topbar header -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Left Sidebar - style you can find in sidebar.scss  -->
  <!-- ============================================================== -->
  @await Html.PartialAsync("_LayoutAccountAside")
  <!-- ============================================================== -->
  <!-- End Left Sidebar - style you can find in sidebar.scss  -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Page wrapper  -->
  <!-- ============================================================== -->
  <div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Bread crumb and right sidebar toggle -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Over Visitor, Our income , slaes different and  sales prediction -->
      <!-- ============================================================== -->
      <div class="col-lg-8">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Add Income</h4>
            <h6 class="card-subtitle">fill in correct information</h6>
            <form class="form-horizontal p-t-20" asp-action="Create" method="post">
              <div asp-validation-summary="All"></div>
              <div class="form-group row">
                <label for="exampleInputuname3" class="col-sm-3 control-label">Description*</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <div class="input-group-prepend"></div>
                    <textarea class="form-control" asp-for="Description" placeholder="Description" type="text" cols="3"></textarea>
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="exampleInputuname3" class="col-sm-3 control-label">Deposit or Withdrawal*</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <div class="input-group-prepend"></div>
                    <select asp-for="Status" class="form-control">
                      <option>-- Select Deposit or Withdrawal --</option>
                      <option>Deposit</option>
                      <option>Withdrawal</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="exampleInputuname3" class="col-sm-3 control-label">Amount*</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <div class="input-group-prepend"></div>
                    <input type="text" class="form-control" asp-for="Price" placeholder="Amount" required>
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="exampleInputuname3" class="col-sm-3 control-label">Sales Tax*</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <div class="input-group-prepend"></div>
                    <textarea class="form-control" asp-for="Description" placeholder="Description" type="text" cols="3"></textarea>
                  </div>
                </div>
              </div>

              @*<div class="form-group row">
                <label for="exampleInputuname3" class="col-sm-3 control-label">Status*</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <div class="input-group-prepend"></div>
                    <select asp-for="Status" class="form-control">
                      <option>-- Select Status --</option>
                      <option>Active</option>
                      <option>Pending</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <label for="exampleInputuname3" class="col-sm-3 control-label">Organisation Id*</label>
                <div class="col-sm-9">
                  <div class="input-group">
                    <div class="input-group-prepend"></div>
                    <select asp-for="OrganisationId" class="form-control" asp-items="ViewBag.OrganisationId"></select>
                  </div>
                </div>
              </div>*@

              <hr />
              <div class="form-group row m-b-0">
                <div class="offset-sm-3 col-sm-9">
                  <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
                </div>
              </div>

            </form>
          </div>
        </div>
      </div>
      <!-- ============================================================== -->
      <!-- End Right sidebar -->
      <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
  </div>
  <!-- ============================================================== -->
  <!-- End Page wrapper  -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- footer -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- End footer -->
  <!-- ============================================================== -->
</div>
