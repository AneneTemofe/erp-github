@model HRM.ERP.Models.HRM.Organisation


@{
    ViewData["Title"] = "Edit Organization";
    Layout = "_LayoutAdmin";
}

<!-- Preloader - style you can find in spinners.css -->
<!-- ============================================================== -->
<div class="preloader">
    <div class="loader">
        <div class="loader__figure"></div>
        <p class="loader__label">Elite admin</p>
    </div>
</div>
<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">
    <!-- ============================================================== -->
    <!-- Topbar header - style you can find in pages.scss -->
    <!-- ============================================================== -->
    @await Html.PartialAsync("_LayoutAdminHeader")
    <!-- ============================================================== -->
    <!-- End Topbar header -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    @await Html.PartialAsync("_LayoutAdminAside")
    <!-- ============================================================== -->
    <!-- End Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Over Visitor, Our income , slaes different and  sales prediction -->
            <!-- ============================================================== -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit Organization Information</h4>
                        <h6 class="card-subtitle">fill in correct information</h6>
                        <form class="form-horizontal p-t-20" asp-action="EditGeneral" asp-controller="Organization" method="post">
                            <div asp-validation-summary="All"></div>
                            <input type="hidden" asp-for="id" />
                            <div class="form-group row">

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Organization Name*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="organisationName" placeholder="organization name">
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Tax ID*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="taxId" placeholder="tax id">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Number of Employees*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="noOfEmployees" placeholder="number of employees">
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Registration Number*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="registrationNo" placeholder="reigistration number">
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group row">

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Phone*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="phoneNumber" placeholder="phone">
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Email*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="email" placeholder="email address">
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group row">

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Address*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="address" placeholder="Address">
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">City*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="city" placeholder="city">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">State/Province*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="state" placeholder="state/province">
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="exampleInputuname3" class="control-label">Country*</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="country" placeholder="country">
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row m-b-0">
                                <div class="offset col-sm-9">
                                    <button type="submit" class="btn btn-success waves-effect waves-light">Save Changes</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer">
        © 2019 Eliteadmin by themedesigner.in
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Wrapper -->
<!-- ============================================================== -->
