@model IEnumerable<HRM.ERP.Models.ACC.Bill>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_LayoutAccountAdmin.cshtml";
    }


    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">Elite admin</p>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->

    <div id="main-wrapper">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        @await Html.PartialAsync("_LayoutAdminHeader")
        <!-- ============================================================== -->
        <!-- End Topbar header -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        @await Html.PartialAsync("_LayoutAccountAside")
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h4 class="text-themecolor">Biils</h4>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                                <li class="breadcrumb-item active">Bills</li>
                            </ol>
                            <a asp-action="AddBills" asp-controller="Purchase" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Create New</a>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Bills</h4>
                                <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                                <div class="table-responsive m-t-40">
                                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                        <thead>
                                          <tr>
                                            <th>
                                              Date
                                            </th>
                                            <th>
                                              Vendor
                                            </th>
                                            <th>
                                              Details
                                            </th>
                                            <th>
                                              Amount
                                            </th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tfoot>
                                          <tr>
                                            <th>
                                              Date
                                            </th>
<th>
                                              Vendor
                                            </th>
                                            <th>
                                              Details
                                            </th>
                                            <th>
                                              Amount
                                            </th>
                                            <th>Actions</th>
                                          </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                          <tr>
                                            <td>
                                              @Html.DisplayFor(modelItem => item.DateCreated)
                                            </td>
                                            <td>
                                              @Html.DisplayFor(modelItem => item.Vendor.VendorName)
                                            </td>
                                            <td>
                                              @Html.DisplayFor(modelItem => item.BillNote)
                                            </td>
                                            <td>
                                              @Html.DisplayFor(modelItem => item.Total)
                                            </td>

                                            @if (item.Status != "Approved")
                                            {
                                            <td>
                                              <a asp-action="EditBills" class="btn btn-sm btn-info" asp-route-id="@item.Id">Edit</a> |
                                              <a asp-action="Approve" class="btn btn-sm btn-success" asp-route-id="@item.Id">Approve/Pay</a>
                                            </td>
                                            }
                                            else
                                            {
                                            <td>
                                              <span class="btn btn-sm btn-warning">Approved</span>

                                            </td>
                                            }
                                                @*<a asp-action="Delete" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Send to Email</a>*@
                                             
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
