                </div>
            </div>
        </div>*@

                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Leave Title*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="text" class="form-control" asp-for="LeaveTitle" placeholder="Leave Title" required>
                                        <span asp-validation-for="LeaveTitle" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Description*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <textarea type="text" class="form-control" asp-for="Description" placeholder="Description" required></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Start Date*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="date" class="form-control" asp-for="LeaveStartDate" placeholder="Start Date" required>
                                        <span asp-validation-for="LeaveStartDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">End Date*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="date" class="form-control" asp-for="LeaveEndDate" placeholder="End Date" required>
                                        <span asp-validation-for="LeaveEndDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Approved Date*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <input type="date" class="form-control" asp-for="LeaveApprovedDate" placeholder="Approved Date" required>
                                        <span asp-validation-for="LeaveApprovedDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Status*</label>
                                <div class="col-sm-9">

                                    <div class="input-group">
                                        <div class="input-group-prepend"></div>
                                        <select asp-for="Status" class="form-control">
                                            <option>Active</option>
                                            <option>Pending</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group row m-b-0">
                                <div class="offset-sm-3 col-sm-9">
                                    <button type="submit"  class="btn btn-success waves-effect waves-light">Create Leave</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
         
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
