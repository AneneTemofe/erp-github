@model HRM.ERP.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit User";
    Layout = "_LayoutAdmin";
}

<!-- Preloader - style you can find in spinners.css -->
<!-- ============================================================== -->
<div class="preloader">
    <div class="loader">
        <div class="loader__figure"></div>
        <p class="loader__label">Elite admin</p>
    </div>
</div>
<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">
    <!-- ============================================================== -->
    <!-- Topbar header - style you can find in pages.scss -->
    <!-- ============================================================== -->
    @await Html.PartialAsync("_LayoutAdminHeader")
    <!-- ============================================================== -->
    <!-- End Topbar header -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    @await Html.PartialAsync("_LayoutAdminAside")
    <!-- ============================================================== -->
    <!-- End Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Over Visitor, Our income , slaes different and  sales prediction -->
            <!-- ============================================================== -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit User</h4>
                        <h6 class="card-subtitle">fill in correct information</h6>
                        <form class="form-horizontal p-t-20" asp-action="EditUser" asp-controller="Users" method="post">
                            <div asp-validation-summary="All"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">User Role*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">@*<span class="input-group-text"><i class="ti-crown"></i></span>*@</div>
                                        <select asp-for="UserRole" class="form-control" required>
                                            <option>Admin</option>
                                            <option>Super Admin</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">User Name*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">@*<span class="input-group-text"><i class="ti-crown"></i></span>*@</div>
                                        <input type="text" class="form-control" asp-for="Usernames" placeholder="" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Employee Name*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">@*<span class="input-group-text"><i class="ti-crown"></i></span>*@</div>
                                        <input type="text" class="form-control" asp-for="EmployeeName" placeholder="" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Phone Number*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">@*<span class="input-group-text"><i class="ti-crown"></i></span>*@</div>
                                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Email</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">@*<span class="input-group-text"><i class="ti-crown"></i></span>*@</div>
                                        <input type="Email" class="form-control" asp-for="Email" placeholder="" required>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Status*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">@*<span class="input-group-text"><i class="ti-crown"></i></span>*@</div>
                                        <select asp-for="Status" class="form-control">
                                            <option>Active</option>
                                            <option>Pending</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <hr />

                            <div class="form-group row m-b-0">
                                <div class="offset-sm-3 col-sm-9">
                                    <input type="submit" value="Save" class="btn btn-success" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Wrapper -->
<!-- ============================================================== -->
