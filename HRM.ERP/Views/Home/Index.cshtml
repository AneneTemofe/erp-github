  
@{
  ViewData["Title"] = "Home Page";
  Layout = "~/Views/Shared/_LayoutLandingPage.cshtml";
}

<div class="preloader">
  <div class="loader">
    <div class="loader__figure"></div>
    <p class="loader__label">ERP4SME Admin</p>
  </div>
</div>
<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">


  @await Html.PartialAsync("_LayoutLandingPageHeader")
  <!-- ============================================================== -->
  <!-- End Topbar header -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Left Sidebar - style you can find in sidebar.scss  -->
  <!-- ============================================================== -->
  @await Html.PartialAsync("_LayoutLandingPageAside")


  <div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Bread crumb and right sidebar toggle -->
      <!-- ============================================================== -->
      <div class="row page-titles">
        <div class="col-md-5 align-self-center">
          <h4 class="text-themecolor">Dashboard</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
          <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
              <li class="breadcrumb-item active">Dashboard </li>
            </ol>
          </div>
        </div>
      </div>
      <!-- ============================================================== -->
      <!-- End Bread crumb and right sidebar toggle -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Info box -->
      <!-- ============================================================== -->
      <!-- Row -->
      <div class="row">
        <!-- Column -->
 
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">

                @if (ViewBag.IsOrg == "NotRegistered")
                {
                  <div class="card-body">
                    <div style="text-align:center;">
                      <h1 class="d-inline">Welcome to ERP4SME <a href="#code1" data-toggle="collapse">@*<i class="fa fa-code" data-toggle="tooltip" title="Get code"></i>*@</a></h1>
                      <p class="text-muted m-t-0">Before you proceed, kindly update your organisation details.</p>
                      <a href="/Organisation/MyOrganisation" class="btn btn-lg btn-success">Click to Update</a>
                    </div>


                  </div>

                }
                else
                {
                  <div class="card-body">
                    <h1 class="d-inline">Modules <a href="#code1" data-toggle="collapse">@*<i class="fa fa-code" data-toggle="tooltip" title="Get code"></i>*@</a></h1>
                    <p class="text-muted m-t-0">For the module click on above code icon</p>
                    <div class="row col-12">
                      <!-- column -->
                      <div class="col-lg-3 col-md-6 img-responsive">
                        <!-- Card -->
                        <div class="card">
                          <img class="card-img-top img-responsive" src="../assets/images/big/inv.png" alt="Card image cap" style="height: 200px;">
                          <div class="card-body">
                            <h4 class="card-title">Inventory</h4>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a href="javascript:void(0)" class="btn btn-warning">Go to Dashboard</a>
                          </div>
                        </div>
                        <!-- Card -->
                      </div>
                      <!-- column -->
                      <!-- column -->
                      <div class="col-lg-3 col-md-6">
                        <!-- Card -->
                        <div class="card">
                          <img class="card-img-top img-responsive" src="../assets/images/big/acc.jpg" alt="Card image cap" style="height: 200px;">
                          <div class="card-body">
                            <h4 class="card-title">Accounting</h4>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a href="/ACC/Dashboard" class="btn btn-success">Go to Dashboard</a>
                          </div>
                        </div>
                        <!-- Card -->
                      </div>
                      <!-- column -->
                      <!-- column -->
                      <div class="col-lg-3 col-md-6">
                        <!-- Card -->
                        <div class="card">
                          <img class="card-img-top img-responsive" src="../assets/images/big/crm.jpg" alt="Card image cap" style="height: 200px;">
                          <div class="card-body">
                            <h4 class="card-title">Customer Relationship Management</h4>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the cards.</p>
                            <a href="javascript:void(0)" class="btn btn-info">Go to Dashboard</a>
                          </div>
                        </div>
                        <!-- Card -->
                      </div>
                      <!-- column -->
                      <!-- column -->
                      <div class="col-lg-3 col-md-6">
                        <!-- Card -->
                        <div class="card">
                          <img class="card-img-top img-responsive" src="../assets/images/big/hrm.jpg" alt="Card image cap" style="height: 200px;">
                          <div class="card-body">
                            <h4 class="card-title">Human Resources Management</h4>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a href="/HRM/Dashboard" class="btn btn-primary">Go to Dashboard</a>
                          </div>
                        </div>
                        <!-- Card -->
                      </div>
                      <!-- column -->
                    </div>
                    <!-- Column -->
                  </div>

                }


              </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


